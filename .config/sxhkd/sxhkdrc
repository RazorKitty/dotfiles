#
# bspwm
#

# logout or lock desktop session
super + {_,shift + }Escape
    {loginctl lock-session,bspc quit}

# restart bspwm
super + shift + r
    xrdb -merge ~/.Xresources; bspc wm -r; pkill -USR1 -x sxhkd; pkill -USR1 -x xst

#
# node
#

# focus the node in the given direction or monitor in direction
super + {h,j,k,l}
    DIR={west,south,north,east}; bspc node -f "$DIR" || bspc monitor -f "$DIR"

# swap nodes or move to the next monitor
super + shift + {h,j,k,l}
    DIR={west,south,north,east}; bspc node -s "$DIR" --follow || bspc node --to-monitor "$DIR" --follow

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -8 0,bottom 0 8,top 0 -8,right 8 0}

# contract a window by moving one of its side inward
super + ctrl + shift + {h,j,k,l}
	bspc node -z {right -8 0,top 0 8,bottom 0 -8,left 8 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-8 0,0 8,0 -8,8 0}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

#
#desktop
#

# focus the next/previous desktop in the current monitor
super + {p,n}
	bspc desktop -f {prev,next}.local

 focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} {1-9}.local



#
# preselect
#

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + alt + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + alt + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + alt + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# extras
#

# terminal emulator
super + Return
	xst

# program launcher
super + @space
	dmenu_run

# inhibit lock
XF86WakeUp ; XF86WakeUp
    caffeine toggle

# audio
XF86Audio{RaiseVolume,LowerVolume,Mute}
    volume {+,-,t}

XF86AudioMic{RaiseVolume,LowerVolume,Mute}
    mic {+,-,t}

# laptop backlight
XF86MonBrightness{Up,Down}
    backlight {+,-}



